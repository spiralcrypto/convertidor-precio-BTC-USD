{
  "manifest_version": 3,
  "name": "Bitcoin to USD Converter",
  "version": "1.0",
  "description": "Convert Bitcoin to USD and vice versa.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "https://api.coingecko.com/"
  ]
}
